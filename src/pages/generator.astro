---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="flex flex-col items-center w-full p-6 gap-6">

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full max-w-5xl">
      
      <div class="card bg-white shadow-xl p-6 flex flex-col items-center justify-center">
        <h2 class="text-xl font-bold mb-4">Aperçu SVG</h2>
        <div class="border border-dashed border-gray-300 w-full h-64 flex items-center justify-center rounded-lg">
          <span class="text-gray-400">Votre SVG apparaîtra ici...</span>
        </div>
        <button class="btn btn-accent mt-4">Télécharger SVG</button>
      </div>

      <div class="card bg-gray-900 text-white shadow-xl p-6">
        <h2 class="text-xl font-bold mb-4">Code généré</h2>
        <pre class="bg-gray-800 rounded-lg p-4 overflow-x-auto">
<code>
</code>
        </pre>
        <button class="btn btn-outline btn-secondary mt-4">Copier le code</button>
      </div>

    </div>

    <div class="flex items-center w-full max-w-5xl gap-4">
      <textarea 
        placeholder="Écris ton prompt ici..." 
        class="textarea textarea-bordered flex-grow h-20"
      ></textarea>
      <button class="btn btn-primary">Générer</button>
    </div>

  </div>
</Layout>
